<script type="text/javascript">  
  $(function() {                                                                   
    $('#test-id-1').css('background-color','yellow');
    $('#test-id-2').css('color','red');
    $('.test-class-1').css('color','blue');
  
    $('#color').simplecolorpicker();
    
  })
</script>

<h2>Check in</h2>

<form  action="/visit" method="POST">

  <div class="form-group">
    <label id="test-id-2">Name</label>                                                                <!-- id -->
    <input name="name" type="text" class="form-control" placeholder="type your name" value="<%= @name %>">
  </div>

  <div class="form-group">
    <label>Number</label>
    <input name="number" type="text" class="form-control test-class-1" placeholder="cell number" value="<%= @number %>">    <!-- class -->
  </div>
   
  <div class="form-group" >
    <label>Comments</label>
    <input name="comments" type="text" class="form-control" placeholder="enter comment" value="<%= @comments %>">
  </div>

  <div class="form-group">
  <label>Choose your barber:</label>  
    <select name="barber"class="form-control" id="test-id-1">                                         <!-- id -->
      <option> </option>
      <option>Vasya</option>
      <option>Roman</option>
    </select>
  </div>  

  <div class="form-group">                                                                             <!-- colorpicker -->
    <label>Color:</label>  
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <div>
    <input type="submit" value = "checkin" class="btn btn-primary"/>
  </div>

</form>
